<group name="confluence">
  <rule id="100300" level="5">
    <decoded_as>json</decoded_as>
    <field name="summary">User added to group</field>
    <description>Confluence: user added to group</description>
  </rule>

  <rule id="100301" level="7">
    <decoded_as>json</decoded_as>
    <field name="summary">Content restriction added</field>
    <description>Confluence: content restriction added</description>
  </rule>

  <rule id="100302" level="6">
    <decoded_as>json</decoded_as>
    <field name="category">Permissions</field>
    <description>Confluence: permission category change</description>
  </rule>

  <rule id="100303" level="7">
    <decoded_as>json</decoded_as>
    <field name="summary">Content restriction added</field>
    <field name="affectedObject.objectType">Group</field>
    <description>Confluence: content restriction added for group</description>
  </rule>

  <rule id="100304" level="7">
    <decoded_as>json</decoded_as>
    <field name="summary">Content restriction added</field>
    <field name="affectedObject.objectType">User</field>
    <description>Confluence: content restriction added for user</description>
  </rule>

  <rule id="100305" level="5">
    <decoded_as>json</decoded_as>
    <field name="category">Users and groups</field>
    <description>Confluence: user and group management event</description>
  </rule>

  <rule id="100306" level="10">
    <decoded_as>json</decoded_as>
    <field name="sysAdmin">true</field>
    <description>Confluence: action by sysAdmin</description>
  </rule>

  <rule id="100307" level="10">
    <decoded_as>json</decoded_as>
    <field name="superAdmin">true</field>
    <description>Confluence: action by superAdmin</description>
  </rule>

  <rule id="100308" level="6">
    <decoded_as>json</decoded_as>
    <field name="changedValues.name">.+</field>
    <description>Confluence: change detected in audit entry</description>
  </rule>

  <rule id="100309" level="6">
    <decoded_as>json</decoded_as>
    <field name="associatedObjects.objectType">Page</field>
    <description>Confluence: page-level audit event</description>
  </rule>

  <rule id="100310" level="6">
    <decoded_as>json</decoded_as>
    <field name="associatedObjects.objectType">Space</field>
    <description>Confluence: space-level audit event</description>
  </rule>
</group>